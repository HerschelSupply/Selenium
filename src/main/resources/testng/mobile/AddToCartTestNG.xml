<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd" >
<suite name="AddToCartTestSuite Mobile" verbose="1">

  <test name="Add To Cart Test CA Mobile" preserve-order="true">
    <parameter name="country" value="CA"/>
    <parameter name="productName" value="Little America Backpack"/>
    <parameter name="skuName" value="Canteen Crosshatch"/>
    <parameter name="drawerSkuName" value="Canteen Crosshatch/Tan Synthetic Leather"/>
    <classes>
      <class name="tests.AddToCartTest">
        <methods>
          <include name="setCookie" />
          <include name="loadLittleAmericaBackpack" />
          <include name="selectSKUMobile" />
          <include name="addToCart" />
          <include name="verifyToaster" />
          <include name="openDrawer" />
          <include name="verifyDrawer" />
          <include name="clickDrawerCheckoutLink" />
          <include name="verifyCart" />
        </methods>
      </class>
    </classes>
  </test>
